CREATE DATABASE IF NOT EXISTS poc_account_db;

use poc_account_db;

drop table if exists T_ACCT_INFO;

CREATE TABLE `T_ACCT_INFO` (
  `ID`  INTEGER(10) NOT NULL COMMENT '主键' AUTO_INCREMENT,
  `ACCT_NO`  VARCHAR(32) NULL DEFAULT NULL COMMENT '卡/账号',
  `ACCT_NAME`  VARCHAR(120) NULL DEFAULT NULL COMMENT '户名',
  `CURR_NO`  VARCHAR(3) NULL DEFAULT NULL COMMENT '币种',
  `BAL_AMT`  DECIMAL(16,2) NULL DEFAULT NULL COMMENT '当前账户余额',
  `PASS_WD`  VARCHAR(50) NULL DEFAULT NULL COMMENT '账户密码',
  `STAT`  CHAR(1) NULL DEFAULT NULL COMMENT '账户状态',
  `OPEN_BANK`  VARCHAR(14) NULL DEFAULT NULL COMMENT '开户行行号',
  `OPEN_BRCH`  VARCHAR(12) NULL DEFAULT NULL COMMENT '开户机构',
  `CREATE_TIME`  TIMESTAMP NULL DEFAULT NULL COMMENT '创建时间',
  `MODIFY_TIME`  TIMESTAMP NULL DEFAULT NULL COMMENT '更新时间',
  `DAC`  CHAR(16) NULL DEFAULT NULL COMMENT 'DAC',
  PRIMARY KEY (`ID`)
)
  ENGINE=InnoDB
  DEFAULT CHARACTER SET=utf8 COLLATE=utf8_general_ci
;
CREATE UNIQUE INDEX indexAcctNO ON T_ACCT_INFO(ACCT_NO);

insert into T_ACCT_INFO(ACCT_NO, ACCT_NAME,CURR_NO,BAL_AMT,PASS_WD,STAT,OPEN_BANK,OPEN_BRCH)
values("1","account_001", "RMB", 1000000, "test_password", "1", "open_bank", "open_brch");
